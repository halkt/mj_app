<% if object.errors.any? %>
  <div id='error_explanation'>
    <div class='alert alert-danger'>
      <%= "エラーが #{pluralize(object.errors.count, '件あります')}" %>
    </div>
    <ul>
      <div class='alert alert-danger'>
        <% object.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
      	<% end %>
      </div>
    </ul>
  </div>
<% end %>
