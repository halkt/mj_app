<%= stylesheet_link_tag('session/new') %>

<%= form_with scope: :session, class: 'login-form', local: true do |f| %>
  <div class='form-group'>
    <%= f.text_field :mail, placeholder: 'xxx@example.com', class: 'form-control', id: 'session_mail' %>
  </div> 
  <div class='form-group'>
    <%= f.password_field :password, placeholder: 'Password', class: 'form-control', id: 'session_password' %>
  </div> 
  <%= f.submit 'LOGIN', class: 'btn' %>
<% end %>
