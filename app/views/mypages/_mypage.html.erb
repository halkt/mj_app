  <table class='table table-hover'>
		<tbody>
			<tr>
        <th><%= User.human_attribute_name(:name) %></th>
        <td><%= current_user.name %></td>
      </tr>
			<tr>
        <th>最大獲得点数</th>
        <td><%= @gamedetails.maximum(:point) %>点</td>
