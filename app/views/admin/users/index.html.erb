<div class='page-title'>
  ユーザ一覧
  <%= image_tag('common/title-home-icon.png', :size => '29x24' ) %>
</div>

<div class='contents-box'>
  <div class='nav justify-content-end'>
    <%= link_to 'ユーザー登録', new_admin_user_path, class: 'insert-btn' %>
  </div>
  <div><%= "件数：#{@users.count} 件"%></div>

  <div>
    <table class='main-table'>
      <thead class='thead-default'>
        <tr>
          <th><%= User.human_attribute_name(:name) %></th>
          <th><%= User.human_attribute_name(:mail) %></th>
          <th><%= User.human_attribute_name(:admin) %></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to user.name, [:admin, user] %></td>
            <td><%= user.mail %></td>
            <td><%= user.admin? ? 'あり' : 'なし' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
