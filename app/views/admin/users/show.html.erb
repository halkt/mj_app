<h2>ユーザーの詳細</h2>

<div class='nav justify-content-end'>
  <%= link_to '一覧' , admin_users_path, class: 'nav-link' %>
</div>

<table class='table table-hover'>
  <tbody>
    <tr>
      <th><%= User.human_attribute_name(:id) %></th>
      <td><%= @user.id %></td>
    </tr>
    <tr>
      <th><%= User.human_attribute_name(:name) %></th>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <th><%= User.human_attribute_name(:icon) %></th>
      <td><%= image_tag(@user.icon_url, :size =>'64x96') if @user.icon.present? %></td>
    </tr>
    <tr>
      <th><%= User.human_attribute_name(:icon) %></th>
      <td><%= image_tag("common/user-icon.png", :size =>'64x96') %></td>
    </tr>
    <tr>
      <th><%= User.human_attribute_name(:login) %></th>
      <td><% @user.login_flg? ? 'ログインユーザー（ログイン可能）': 'ゲストユーザー（ログイン不可）'%></td>
    </tr>
    <tr>
      <th><%= User.human_attribute_name(:mail) %></th>
      <td><%= @user.mail %></td>
    </tr>
    <tr>
      <th><%= User.human_attribute_name(:admin) %></th>
      <td><%= @user.admin? ? 'あり' : 'なし' %></td>
    </tr>
    <tr>
      <th><%= User.human_attribute_name(:description) %></th>
      <td><%= simple_format(h(@user.description), {}, sanitize: false, wrapper_tag: "div") %></td>
    </tr>
    <tr>
      <th><%= User.human_attribute_name(:created_at) %></th>
      <td><%= @user.created_at %></td>
    </tr>
    <tr>
      <th><%= User.human_attribute_name(:updated_at) %></th>
      <td><%= @user.updated_at %></td>
    </tr>
  </tbody>
</table>

<%= link_to '編集', edit_admin_user_path, class: 'btn btn-primary mr-3' %>
<%= link_to '削除', [:admin, @user], method: :delete, data: { confirm: "ユーザー「#{@user.name}」を削除します。よろしいですか？"}, class: 'btn btn-danger' %>
