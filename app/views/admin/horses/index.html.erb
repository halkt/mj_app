<h2>ウマの更新</h2>

<div class='nav justify-content-start'>
  <p><%= "件数：#{@horses.count} 件"%></p>
</div>

<%= link_to 'ウマ登録', new_admin_horse_path, class: 'btn btn-outline-success btn-block' %>

<div class='mb-3'>
  <table class='table table-hover'>
    <thead class='thead-default'>
      <tr>
        <th><%= Horse.human_attribute_name(:name) %></th>
        <th><%= Horse.human_attribute_name(:point1) %></th>
        <th><%= Horse.human_attribute_name(:point2) %></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @horses.each do |horse| %>
        <tr>
          <td><%= link_to horse.name ,edit_admin_horse_path(horse) %></td>
          <td><%= horse.point1 %></td>
          <td><%= horse.point2 %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'ウマ登録', new_admin_horse_path, class: 'btn btn-outline-success btn-block' %>